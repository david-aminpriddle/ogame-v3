<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - OGame</title>
    <link rel="stylesheet" href="~/dist/assets/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
</head>
<body class="flex flex-col h-full">
<header>
    <nav class="mb-8">
        <ul class="flex flex-row justify-around p-2">
            <li>
                <a class="text-accent hover:underline" asp-area="" asp-controller="Home" asp-action="Index">OGame</a>
            </li>
            <partial name="_LoginPartial"/>
        </ul>
    </nav>
</header>
<div class="flex-1">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="p-2 text-sm">
    &copy; 2023 - OGame.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
</footer>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
